<Window x:Class="RentalsManager.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RentalsManager"
        mc:Ignorable="d"
        Background="DimGray"
        Title="Notification" Height="150" Width="400">
    <Grid Margin="5">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<TextBlock x:Name="MainTextBlock" Grid.Row="0" Height="80" Text="" Margin="10"/>
		<Button x:Name="CloseButton" Grid.Row="1" Height="30" Content="Close" KeyUp="CloseButton_KeyUp"/>
    </Grid>
</Window>
