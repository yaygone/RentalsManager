<Window x:Class="RentalsManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RentalsManager"
        mc:Ignorable="d"
        Title="Rentals Manager" Height="230" Width="300">
	<Grid Background="DimGray">
		<StackPanel Margin="10, 15, 10, 20">
			<TextBlock TextAlignment="Center" Margin="0,0,0,10" FontSize="16" FontWeight="Bold">STAFF LOGIN</TextBlock>
			<StackPanel Orientation="Horizontal" Margin="0,10,0,10">
				<TextBlock TextAlignment="Left" Width="80">Username:</TextBlock>
				<TextBox x:Name="UsernameTextBox" Width="180"></TextBox>
			</StackPanel>
			<StackPanel Orientation="Horizontal" Margin="0,10,0,10">
				<TextBlock TextAlignment="Left" Width="80">Password:</TextBlock>
				<PasswordBox x:Name="PasswordPwBox" PasswordChar ="*" Width="180"></PasswordBox>
			</StackPanel>
			<Button Margin="10,10,10,10" Height="40" Click="ButtonBase_OnClick">Login</Button>
		</StackPanel>
    </Grid>
</Window>
